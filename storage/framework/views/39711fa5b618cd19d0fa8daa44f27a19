<div class="alert alert-<?php echo $class; ?> <?php if(isset($dismissable)): ?> alert-dismissable <?php endif; ?>" role="alert">
<?php if(isset($dismissable)): ?> <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button> <?php endif; ?> <i class="fa fa-<?php echo (isset($icon)) ? $icon : $class; ?>"></i>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; <?php if(isset($link)): ?>  <a href="#" class="alert-link"><?php echo $link; ?> </a> <?php endif; ?> <?php echo $message; ?>.
</div>